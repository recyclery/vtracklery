<% end -%>

<h1>
  <%= @worker.name %>
</h1>

<p>
  <img src='<%= @worker.avatar_url %>' />
</p>

<p>
  <strong><%= t('common.in_shop') %>:</strong>
  <%= @worker.in_shop %>
</p>

<p>
  <strong><%= t('common.email') %>:</strong>
